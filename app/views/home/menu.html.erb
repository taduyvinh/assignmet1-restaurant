<h1>Menu</h1>
	<ul class="nav nav-pills">
		<% Section.all.each do |section| %>
			<li class="nav-item">
			<%= link_to "#{section.name}", menu_path(section: section.name), class: "nav-link #{'active' if params[:section] == section.name}" %>
			</li>
  		<% end %>
  	</ul>

<% if @section %>
<%= link_to "Sort by name", food_items_path(sort_by: :name) %>
<%= link_to "Sort by price", food_items_path(sort_by: :price) %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Section</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @section.food_items.each do |food| %>
      <tr>
        <td><%= link_to "#{food.name}" , food %></td>
        <td><%= food.price %></td>
        <td><%= food.section.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>