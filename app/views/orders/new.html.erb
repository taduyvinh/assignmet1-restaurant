
<p> order for <%= @food_item.name %></p>
<%= form_for [@food_item, Order.new] do |f| %>

<div class="field">
    <%= f.label :username %>
    <%= f.text_field :username %>
  </div>

  <div class="field">
    <%= f.label :address %>
    <%= f.text_area :address %>
  </div>

  <div class="field">
    <%= f.label :phonenumber %>
    <%= f.number_field :phonenumber %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
